{
  "manifest_version": 3,
  "name": "Mindfully",
  "description": "Be mindful about your web usage",
  "version": "0.1",
  "action": {
    "default_popup": "src/views/default.html",
    "default_icon": "src/assets/mindfully.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/views/mindfulness-check.html",
        "src/styles/mindfulness-check.css"
      ],
      "matches": ["https://*/*"]
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage"
  ],
  "background": {
    "service_worker": "dist/serviceWorker.js"
  },
  "host_permissions": ["https://*/*"],
  "options_page": "src/views/options.html"
}
